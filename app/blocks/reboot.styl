html
	box-sizing border-box
	font-size 10px
	-webkit-tap-highlight-color rgba(0,0,0,0)

*
*::before
*::after
	box-sizing inherit

html
body
	width 100%
	height 100%

@-moz-viewport
	width device-width

@-ms-viewport
	width device-width

@-webkit-viewport
	width device-width

@viewport
	width device-width

body
	background-color #fff
	background-repeat repeat-x
	background-attachment scroll 20px
	font-size 17px
	font-family "Oxygen", sans-serif
	color #4d4d4d
	-webkit-font-smoothing antialiased
	background #e4e9f0

h1, h2, h3, h4, h5, h6
	font-style normal
	color #333333

h1
	font bold 45px "Museo Cyr", sans-serif
	margin-bottom 10px

h2
	font bold 23px "Museo Cyr", sans-serif
	margin-bottom 15px

h3
	font 30px "helvetica", sans-serif,arial
	margin-bottom 10px

h4
	font 700 16px "Museo Cyr", sans-serif

h5
	font 14px "Museo Cyr", sans-serif
	margin-bottom 10px

h6
	font 12px "Museo Cyr", sans-serif
	margin-bottom 10px
	color #868686

input, label
	vertical-align middle

img
	outline none
	vertical-align middle

a
	text-decoration underline
	font-size 1em
	color #29a9e0
	&:hover
		text-decoration none

p
	font 15px "helvetica", sans-serif
	color #4d4d4d
	line-height 23px

input[type="submit"]
	-webkit-appearance none
	-moz-appearance none
	appearance none

.fl
	float left

.fr
	float right

.clear
	clear both
	font-size 0px
	line-height 0px
	height 0px
	overflow hidden
	margin 0px
	padding 0px
	float none

.ti
	font-size 1px
	line-height 1px
	text-indent -9999px

.list_null
	margin 0
	padding 0
	list-style none

.clearfix:before
.clearfix:after
	content ""
	display table

.clearfix
	zoom 1
	&:after
		clear both

.fl-pic
	float left
	margin-right 35px
	margin-bottom 30px

.fr-pic
	float right
	margin-left 35px
	margin-bottom 30px
